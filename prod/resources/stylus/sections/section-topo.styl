@import '../_variables'

// Topo da Pagina
section#topo
	position relative; display flex; width 100%; height 100vh; align-items center; justify-content center;
	background-linear-gradient(top, $color2, 0%, $color3, 100%);
	
	&::before
		content ''; position absolute; top 2%; left 2%; width 96%; height 96%; border 1px solid #fff; z-index 5;
		box-shadow 0px 0px 10px rgba(#fff,0.5), inset 0 0 10px rgba(#fff,0.5);
	
	.videos
		position absolute; width 100%; height 100%; top 0; left 0; overflow hidden; opacity: 0.6;
		
		video
			position absolute; top 0; left 50%; transform translate(-50%,0);
			width auto; height auto; min-width: 100%; min-height 100%;
	
	.center
		position relative; max-width: 100%; padding: 0 3%;
		
	svg
		display: block; width 50vw; height: 50vh; max-width 400px; max-height: 400px; margin 0 auto;
		filter drop-shadow(0px 0px 5px #fff)
		path
			fill transparent; stroke #fff; stroke-width 2; stroke-dasharray 1150; stroke-dashoffset 0;
			animation drawUp 1s ease infinite alternate;
			
			for i in (1..6)
				&:nth-child({i})
					animation-delay: 0.1s * i;
	
	h1
		position relative; margin-top 15px; text-transform uppercase; font-style: italic; text-align center;
		&::before, &::after
			content attr(data-text); display block; position absolute; top 0; left 0; width 100%; text-align center;
			opacity: 0.5;
		
		&::before
			color: $glitch1; transform translate(-3px,0);
		&::after
			color: $glitch2; transform translate(3px,0)
		
		span
			position relative; z-index 1;
		
	ul
		display flex; justify-content center; flex-flow: row wrap;
		li
			width 100%; margin: 0 10px; text-transform uppercase; text-align center; font-style italic;	
				